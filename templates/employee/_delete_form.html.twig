<form method="post" action="{{ path('employee_delete', {'emp_no': employee.empNo}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.empNo) }}">
    <button class="btn btn-danger" >Delete</button>
</form>
